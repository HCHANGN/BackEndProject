<%- include("../partials/header")%>

<div class="container">	

	<header class="jumbotron">
		<div>
			<h1>
				Welcome to YelpCamp!
			</h1>
			<p>
				View our hand-picked campground from all over the world!
			</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
			</p>
		</div>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3>
				Our Most Popular Campgrounds 
			</h3>
		</div>
	</div>

	<div class="row text-center" style="display:flex; flex-warp:warp;">
		<%campgrounds.forEach(function(campground){%>
		<div class="col-md-4 col-sm-12">
			<div class="thumbnail">
				<img src="<%=campground.image%>" style="height:100%; width:100%; margin:20px;">
				<div class="caption">
					<h4>
						<%=campground.name%>
					</h4>
				</div>
				<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
			</div>		
		</div>
		<%});%>
	</div>
	
</div>

<%- include("../partials/footer")%>